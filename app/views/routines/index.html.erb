<div class="container mx-auto p-20 text-gray-800">
  <div class="grid md:grid-cols-1 lg:grid-cols-3 gap-4">
    <% [@routines_before0, @routines_before1, @routines_before3].zip(['就寝直前におすすめのルーティーン', '就寝1時間前におすすめのルーティーン', '就寝3時間以上前におすすめのルーティーン']).each do |routines, title| %>
      <div>
        <!-- モバイルブラウザ用の表示 -->
        <button class="lg:hidden dropdown-toggle btn m-1 w-full font-semibold mb-2 bg-blue-500 hover:bg-blue-300 text-left text-gray-800 p-2">
          <%= title %>
        </button>
        <div class="lg:hidden dropdown-content hidden w-full p-2 shadow">
          <% routines.each do |routine| %>
            <div class="card mb-5 border border-black">
              <%= link_to routine_path(routine), data: { turbo: "false" } do %>
                <div class="card-body">
                  <h2 class="card-title"><%= routine.name %></h2>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
        
        <!-- デスクトップブラウザ用の表示 -->
        <div class="hidden lg:block">
          <h2 class="font-semibold mb-2"><%= title %></h2>
          <% routines.each do |routine| %>
            <div class="card mb-5 border border-black">
              <%= link_to routine_path(routine), data: { turbo: "false" } do %>
                <div class="card-body">
                  <h2 class="card-title"><%= routine.name %></h2>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
