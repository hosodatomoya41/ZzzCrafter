<section class="text-gray-700">
  <div class="container px-5 py-24 mx-auto flex flex-wrap items-center">
    <div class="w-full mb-20">
      <h1 class="title-font text-center font-medium text-4xl">ユーザーページ</h1>
    </div>

    <div class="w-full mb-10">
      <div class="flex flex-col md:flex-row mb-20">
        <div class="grid h-20 card bg-orange-300 rounded-box place-items-center mb-5 md:mb-0 flex-grow">
          <p class="text-2xl">ルーティーンを実施した回数: <%= @total_routine_count %>回</p>
        </div>
        <div class="mx-5 divider divider-horizonal md:mx-5"></div>
        <div class="grid h-20 card bg-orange-300 rounded-box place-items-center flex-grow">
          <p class="text-2xl">ルーティーンを実施した日数: <%= @total_date_count %>日</p>
        </div>
      </div>

      <div class="flex flex-col md:flex-row w-full ">
        <%= link_to "あなたにおすすめのルーティーンを見る", recommend_routines_users_path, class: 'btn btn-info text-2xl h-20 px-10 mb-10 md:mb-0 md:mr-10 flex-grow' %>
        <%= link_to "登録したルーティーンと翌朝の調子を見る", routine_records_users_path, class: 'btn btn-info text-2xl h-20 px-10 flex-grow' %>
      </div>
    </div>
  </div>
</section>
